-- constants
c_state_menu=0
c_state_game=1

tile_info = {
 free_tile = 0
 wall_tile = 1
 }

 rock_type = 0
 sissor_type = 1
 paper_type = 2

-- variables
state = c_state_menu
player = {x = 64, y = 64, spr = 001}
enemy = {x = 8, y = 8, type = rock_type, spr = 003}
enemies = {enemy}


-->8
-- game logic functions --

function _init()
  state = c_state_menu
  current_game = c_game_0
end

function _update()
  if state==c_state_game then
    update_game()
  elseif state==c_state_menu then
    update_menu()
  end
end


function update_game()
  if btnp(0) or btnp(1) or btnp(2) or btnp(3) or btnp(4) or btnp(5) then
    update_player()
    update_world()
  end
end

function update_player()
  if btn(0) then
    player.x -= 8
  end
  if btn(1) then
    player.x += 8
  end
  if btn(2) then
    player.y -= 8
  end
  if btn(3) then
    player.y += 8
  end
end

function update_world()
  foreach{enemies, update_enemy}
end

function update_enemy(enemy) 
  enemy.x += rnd(2) - 1
  enemy.y += rnd(2) - 1
end

function update_menu()
 if btn(4) then
   state = c_state_game
 end
end
-->8
-- draw functions --

function _draw()
  cls()
  map(0, 0, 0)
  if state==c_state_menu then
    print("welcome to game", 10, 10)
  elseif state==c_state_game then
    print("now in game", 20, 20)
    spr(player.spr, player.x, player.y)
    spr(enemy.spr, enemy.x, enemy.y)
  end
end
